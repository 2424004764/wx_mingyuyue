.container {
  display: flex;
  flex-direction: column;
   width:100%;
    height:100%;
    background: #f5f5f5;
}


.list_card {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 2rpx;
  box-shadow:0 0 2rpx rgba(0, 0, 0, .5);
}
.list_card_left {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}
.list_card_left_title {
  color: #333;
  font-size: 0.9em;
   margin-top: 20rpx;
   margin-bottom: 5rpx;
}

.list_card_left_sub {
  display: flex;
  flex-direction: row;
}
.list_card_left_sub_image {
   width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
  align-self: center;
}
.list_card_left_subtitle {
  color: #999;
  font-size: 0.6em;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  align-self: center;
}


/**/
.list_card_right {
   display: flex;
  flex-direction: row;
  align-self: center;
  justify-content: center;
}
.list_card_right_num {
   color: #999;
  font-size: 0.7em;
  align-self: center;
}
.list_card_right_image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
