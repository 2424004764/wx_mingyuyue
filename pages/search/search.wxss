}
.dictionary_item_bihua {
  font-size: 0.8em;
   margin-bottom: 10px;
}
.dictionary_item_wuxin {
   margin-bottom: 10px;
  
}

.popwindow_header {
  height: 50px;
  background-color: #2c3e50;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.popwindow_header_title {
  color: #fff;
  font-size: 1.2em;
  letter-spacing: 5rpx;
}

.popwindow_header_stitle {
  color: #f00;
  font-size: 1.2em;
  letter-spacing: 5rpx;
}

.popwindow_center {
  height: 150px;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.popwindow_footer {
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.popwindow_footer_cancle {
   color: #333;
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popwindow_footer_split {
  width: 1rpx;
  height: 50%;
  background: #eee;
}

.popwindow_footer_sure {
  color: #333;
