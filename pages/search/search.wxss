/*popwindow*/

.popwindow {
  background-color: #fff;
  border-radius: 1px;
  box-shadow: 0 7px 14px rgba(50, 50, 93, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08);
  font-family: Arial;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  cursor: pointer;
  height: 250px;
  width: 100%;
  z-index: 9999;
  position: absolute;
  top: -250px;
}

.myCanvas {
  height: 50px;
  width: 100%;
}
.dictionary {
  display: flex;
   width: 100%;
  flex-direction: row;
  justify-content: center;
}

.dictionary_split {
  background: #fcfcfc;
  height: 100px;
  width: 1rpx;
}

.dictionary_item {
   display: flex;
   flex: 1;
  flex-direction: column;
}

.loading_dict {
  width: 100%;
  margin-top: 50px;
  text-align: center;
   z-index: 9999;
  position: absolute;
}
.dictionary_item_name {

  font-size: 1.2em;
  margin-bottom: 10px;
}
.dictionary_item_pinyin {
   margin-bottom: 10px;
  
}
.dictionary_item_bushou {
