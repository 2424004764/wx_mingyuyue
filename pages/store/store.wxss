/**index.wxss**/

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, RGBA(245, 245, 245, 1.00), RGBA(155, 155, 155, 0.80));
}

/*popwindow*/

.popwindow {
  background-color: #fff;
  border-radius: 1px;
  box-shadow: 0 7px 14px rgba(50, 50, 93, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08);
  font-family: Arial;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  cursor: pointer;
  height: 250px;
  width: 100%;
  z-index: 9999;
  position: absolute;
  top: -250px;
}

.myCanvas {
  height: 50px;
  width: 100%;
}

.dictionary {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.dictionary_split {
  background: #fcfcfc;
  height: 100px;
  width: 1rpx;
}

.dictionary_item {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.loading_dict {
  width: 100%;
  margin-top: 50px;
  text-align: center;
  z-index: 9999;
  position: absolute;
}

.dictionary_item_name {
  font-size: 1.2em;
  margin-bottom: 10px;
}

.dictionary_item_pinyin {
  margin-bottom: 10px;
}

.dictionary_item_bushou {
  margin-bottom: 10px;
}

.dictionary_item_bihua {
  font-size: 0.8em;
  margin-bottom: 10px;
}

.dictionary_item_wuxin {
  margin-bottom: 10px;
}

.popwindow_header {
  height: 50px;
  background-color: #2c3e50;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.popwindow_header_title {
  color: #fff;
  font-size: 1.2em;
  letter-spacing: 5rpx;
}

.popwindow_header_stitle {
  color: #f00;
  font-size: 1.2em;
  letter-spacing: 5rpx;
}

.popwindow_center {
  height: 150px;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.popwindow_footer {
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.popwindow_footer_cancle {
  color: #333;
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popwindow_footer_split {
  width: 1rpx;
  height: 50%;
  background: #eee;
}

.popwindow_footer_sure {
  color: orangered;
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*header*/

.content {
  height: 100%;
  flex: 1;
}

.footer {
  display: none;
  height: 0vh;
  background-color: #999;
}

.scrollview {
  /*background-color: #eee;*/
}

.section {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /*justify-content: space-around;*/
